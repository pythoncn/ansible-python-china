upstream {{ zerqu_app_name }} {
  server {{ zerqu_bind }};
}

map $http_cf_visitor $x_scheme {
  '{"scheme":"http"}' http;
  '{"scheme":"https"}' https;
  default $http_x_forwarded_proto;
}

server {
  listen [::]:80;
  listen 80;

  server_name {{ zerqu_server_name }};

  access_log /var/log/nginx/{{ zerqu_server_name }}.access.log;
  error_log /var/log/nginx/{{ zerqu_server_name }}.error.log;

  root {{ zerqu_public_dir }};

  location ~* ^/[^\/]+\.(gif|jpg|jpeg|png|txt|ico)$ {
    expires 10d;
  }

  # security headers
  add_header X-XSS-Protection "1; mode=block";

  location / {
    proxy_pass http://{{ zerqu_app_name }};
    proxy_http_version 1.1;
    proxy_connect_timeout 300;
    proxy_send_timeout 300;
    proxy_read_timeout 300;
    send_timeout 300;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $http_host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-Proto $x_scheme;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Port $server_port;
    proxy_set_header X-Request-Start $msec;
  }
}
